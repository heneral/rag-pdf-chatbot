# Environment Variables Template
# Copy this file to .env and fill in your values

# OpenAI API Key (required for OpenAI embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
DEBUG=False

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Vector Database Settings
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma
VECTOR_DB_PATH=./vector_store

# Embedding Settings
EMBEDDING_PROVIDER=openai  # Options: openai, sentence-transformers
EMBEDDING_MODEL=text-embedding-3-small  # For OpenAI

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview  # Options: gpt-4-turbo-preview, gpt-3.5-turbo, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=4
